{
  "name": "@true-directive/grid",
  "description": "Fast and fully-functional good-looking visualizer of data in Angular-applications",
  "version": "1.0.0",
  "scripts": {
    "test": "karma start",
    "clean": "rimraf dist",
    "u": "npm update @true-directive/base",
    "build:icons": "ncp ../../styles/icons/ dist/icons/",
    "build:themes_scss": "ncp ../../styles/themes/ dist/themes/",
    "build:themes_css_l": "node-sass ../../styles/themes/theme-light.scss -o dist/themes/compiled/ --output-style nested",
    "build:themes_css_d": "node-sass ../../styles/themes/theme-dark.scss -o dist/themes/compiled/ --output-style nested",
    "build:themes_css_lg": "node-sass ../../styles/themes/theme-light-grid.scss -o dist/themes/compiled/ --output-style nested",
    "build:themes_css_dg": "node-sass ../../styles/themes/theme-dark-grid.scss -o dist/themes/compiled/ --output-style nested",
    "build": "npm run clean && ngc && ng-packagr -p ng-package.json && npm run build:themes_scss && npm run build:themes_css_lg && npm run build:themes_css_dg && npm run build:themes_css_l && npm run build:themes_css_d && npm run build:icons"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/true-directive/true-grid"
  },
  "keywords": [
    "angular",
    "grid",
    "data grid"
  ],
  "author": "Aleksey Melnikov <alx@truedirective.com>",
  "license": "MIT",
  "main": "./bundles/true-directive-grid.umd.js",
  "module": "./true-directive-grid.es5.js",
  "typings": "./true-directive-grid.d.ts",
  "homepage": "https://truedirective.com/",
  "dependencies": {
    "@true-directive/base": "^1.0.26"
  },
  "peerDependencies": {
    "@angular/core": "^7.2.0",
    "@angular/forms": "^7.2.0",
    "typescript": "^3.2.2",
    "tslib": "^1.9.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.13.0",
    "@angular/cli": "~7.3.9",
    "@angular/compiler-cli": "~7.2.0",
    "@angular/language-service": "~7.2.0",
    "@angular/animations": "~7.2.0",
    "@angular/common": "~7.2.0",
    "@angular/compiler": "~7.2.0",
    "@angular/core": "~7.2.0",
    "@angular/forms": "~7.2.0",
    "@angular/http": "~7.2.0",
    "@angular/platform-browser": "~7.2.0",
    "@angular/platform-browser-dynamic": "~7.2.0",
    "@angular/router": "~7.2.0",
    "@types/node": "~8.9.4",
    "@types/jasmine": "~2.8.8",
    "@types/hammerjs": "~2.0.36",
    "@types/jasminewd2": "~2.0.3",
    "codelyzer": "~4.5.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typescript": "~3.2.2",
    "core-js": "^2.5.4",
    "rxjs": "~6.3.3",
    "zone.js": "~0.8.26",
    "ng-packagr": "^5.3.0",
    "ncp": "^2.0.0"
  },
  "engines": {
    "npm": ">4.0.0"
  }
}
